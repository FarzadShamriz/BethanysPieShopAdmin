@model CategoryListViewModel

<h2>Categories</h2>
<hr />

@if(TempData["CategoryDeleted"] != null)
{
    <script>
        $(document).ready(function(){
            toastr.success('@TempData["CategoryDeleted"]');
        });
    </script>
}

@if (ViewData["Error Message"] != null || !Model.Categories.Any())
{
    @if (ViewData["Error Message"] != null)
    {
        <script>
            $(document).ready(function(){
                toastr.error('@ViewData["Error Message"]');
            });
        </script>
    }
    else
    {
        <p>No results</p>
    }

}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date Added</th>
            <th>Actions</th>
        </tr>
        @foreach (var category in Model.Categories)
        {

            <tr>
                <td>@category.CategoryId</td>
                <td>@category.Name</td>
                <td>@category.DateAdded.Value.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@category.CategoryId">Details</a>
                    <a asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </table>
}
